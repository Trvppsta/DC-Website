<script>
function showMessage(){alert("DC-Website is live and ultra HD!");}

// Gallery fade-in on scroll
window.addEventListener('scroll', function(){
  const gallery = document.getElementById('gallery-container');
  const rect = gallery.getBoundingClientRect();
  if(rect.top < window.innerHeight - 50){gallery.classList.add('show');}
});
console.log("DC-Website loaded with ultra HD animations!");
</script>

